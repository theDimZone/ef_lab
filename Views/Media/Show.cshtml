@using EF_LAb.Models
@model EF_LAb.Models.Media
@{
    ViewData["Title"] = Model.Name;
}

<div class="row">
    <div class="col-8">
        <h2>@Model.Name</h2>
    </div>
    <div class="col-2">
        <a href="@Url.Action("Update", "Media", new { Id = Model.Id })" type="button" class="btn btn-block btn-outline-success">Редактировать</a>
    </div>
    <div class="col-2">
        <button type="button" class="btn btn-block btn-outline-danger" data-toggle="modal" data-target="#exampleModal">
            Удалить
        </button>

        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Осторожно</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        ...
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Отменить</button>
                        @using (Html.BeginForm("Delete", "Media", FormMethod.Post))
                        {
                            <input type="hidden" name="Id" value="@Model.Id" />

                            <button type="submit" class="btn btn-block btn-danger">Удалить</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-8">
        Фильм: <a href="@Url.Action("Show", "Movies", new { Id = Model.Movie.Id })">@Model.Movie.Name (@Model.Movie.Year)</a>
        
    </div>
</div>

@{ if (Model.Type == "url")
    {
        <div class="row">
            <div class="col-8">
                <a href="@Model.Url" target="_blank">@Model.Url</a>
            </div>
        </div>
    }
}
<br />
@{ if (Model.Type == "youtube")
    {
        <div class="row">
            <div class="col-8">
                <a href="@Model.Url" target="_blank">@Model.Url</a>
            </div>
        </div>
    }
}
@{ if (Model.Type == "img")
    {
        <div class="row">
            <div class="col-8">
                <img src="@Model.Url" width="500px" />
            </div>
        </div>
    }
}